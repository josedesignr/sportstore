@import 'fonts.styl'
@import 'nib'
@import "normalize.styl"
//@import 'css/bootstrap.css'
//@import 'css/bootstrap.min.css'

body
    font-size 16px
    
//CLASES UTILITARIAS
.clearfix
    clearfix()
    
.center-block
    margin 0 auto

.margin-lr
    margin 0 1em
    
.margin-tb
    margin 1em 0
    
//Fin de Clases utilitarias

.contenido
    //Información ppal/central
    position relative
    overflow hidden
    &-ppal
        h3
            font-size 1.3em
    //Menú izquierdo
    &-left
        width 56%
        height 100%
        position fixed
        left -56%
        top 0
        background #141F23
        transition .3s
        z-index 2
        &.isActive
            left 0
        h1
            color white
            padding 0 1em
        ul
            padding 0
            border-bottom 3px solid rgba(darkgray 0.2)
            li
                text-align left
                list-style none
                a
                    color white
                    display block
                    text-decoration none
                    padding 0 1em
                    cursor pointer
                    transition .3s
                    height 3.2em
                    line-height 3.2em
                    //font-size .9em
                    &:hover
                        background rgba(gray .5)
                    &:before
                        margin-right .5em
                &:last-child
                    margin-bottom 1em                
    //Menú derecho      
    &-right
        display none
        position absolute
        width 200px
        height 100%
        right -150px
        top 0
        background blue
        transition 1s
        &.isActive
            right 0

.list-group
    text-align center
    
.list-group-item
    display inline-block
    width 20em
    margin .5em 
    
.contenedorThumbs
    padding 0
    
.contenedorThumbs > li
    display inline-block
    
.tabs
    display inline-block
    
.panel
    height 3em
    
.btnComprar
    display block!important
    width 14em
    margin 0 auto

.botonMenu
    width 2.5em
    background #141F23
    position absolute
    color lightgray
    cursor pointer
    padding .5em
    border-radius .5em
    top 0
    right -2em

.icon-reorder
    text-align right
    font-size 1.5em

.precio
    margin-left .8em
    color gray
    
@media screen and (min-width:768px)
    .botonMenu
        display none
    .contenido-left
        left 0
        width 40%  
    .mainMenu-link
        text-align center
        margin 0
    .contenido-ppal
        display inline-block
        width 60%
        float right
        box-sizing border-box